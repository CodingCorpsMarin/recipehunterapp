

<h3 id="Query">Searching for - <%= @search_term %></h3>

<% if @recipes.nil? %>
    <p>No recipes found with relevant information.... !!! </p>
<% else %>
    <table border="1">
        <tr>
            <th id="Thumbnail">Thumbnail</th>
            <th id="Title">Title</th>
            <th id="SR">Social Rank</th>
        </tr>
        <% @recipes.each do |recipe| %>
        <tr>
            <td><%= link_to( image_tag(recipe["image_url"], height: '250', width: '250') , recipe['source_url']) %></td>
            <td style="text-align: center;"><%= link_to(sanitize(recipe["title"]), recipe['source_url']) %></td>
            <td style="text-align: center;"><%= recipe["social_rank"].round %></td>
        </tr>
        <% end %>
    </table>
<% end %>
